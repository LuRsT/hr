function hr {
    for i in $(seq 1 $(tput cols));
    do
        echo -n "$1";
    done

    echo ""
}


if [[ -n $1 ]]; then
    space_string=$1
    string_size=${#space_string};

    for char_index in $(seq 0 $(expr ${string_size} - 1));
    do
        hr ${space_string:char_index:1}
    done
else
    hr "="
fi

